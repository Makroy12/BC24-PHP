        })
        }}
        {{ form_row(form.description, { 
            label: 'Description'
        })
        }}
        {{ form_row(form.components, { 
            label: 'Composants'
        })
        }}
        {{ form_row(form.origin, { 
            label: 'Lieu de production'
        })
        }}
    {{ form_end(form) }}
        
